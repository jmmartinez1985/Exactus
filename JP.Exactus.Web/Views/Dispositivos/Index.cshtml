@model IEnumerable<JP.Exactus.Data.ViewModel.DispositivoViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Lista de Dispostivos</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Detalle de Dispositivos
                @Html.ActionLink(" Registrar Dispositivo", "Create", "Dispositivos", null, new { @class = "fa fa-plus-circle pull-right" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.IDDispositivo  )*@
                                    ID Dispositivo
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.IDEmpresa)*@
                                    Empresa
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.NombreDispositivo)*@
                                    Nombre del Dispositivo
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.MACDispositivo)*@
                                    MAC del Dispositivo
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.FechaExpira)*@
                                    Fecha Vencimiento
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Activo)
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.UsuarioModifica)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaModifica)
                                </th>*@
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IDDispositivo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Empresa.NombreEmpresa)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreDispositivo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MACDispositivo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaExpira)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Activo)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.UsuarioModifica)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaModifica)
                                    </td>*@
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.IDDispositivo }, new { @class = "glyphicon glyphicon-edit" }) @*|
                                            @Html.ActionLink("Details", "Details", new { id = item.IDRequerimiento }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.IDRequerimiento })*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
