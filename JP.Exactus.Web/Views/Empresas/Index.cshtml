@model IEnumerable<JP.Exactus.Data.ViewModel.EmpresasViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Listado de Empresas</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Detalle de Empresas
                @Html.ActionLink(" Registrar Empresa", "Create", "Empresas", null, new { @class = "fa fa-plus-circle pull-right" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.IDEmpresa)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NombreEmpresa)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Direccion)
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.Ruc)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UrlApi)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Logo)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PersonaContacto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Activo)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IDEmpresa)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreEmpresa)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Telefono)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Direccion)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.Ruc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UrlApi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Logo)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PersonaContacto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Activo)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.IDEmpresa }, new { @class = "glyphicon glyphicon-edit" }) 
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
