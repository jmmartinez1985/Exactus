@model IEnumerable<JP.Exactus.Data.ViewModel.OpcionesEmpresaViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Listado de Opciones por Empresa</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Detalle de Opciones por Empresa
                @Html.ActionLink(" Registrar Opcion por Empresa", "Create", "Requerimiento", null, new { @class = "fa fa-plus-circle pull-right" })

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.IDOpcionEmpresa)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IDEmpresa)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IDOpcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Activo)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IDOpcionEmpresa)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Empresa.NombreEmpresa)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Opciones.DescripcionOpcion )
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Activo)
                                    </td>


                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.IDOpcionEmpresa }, new { @class = "glyphicon glyphicon-edit" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
